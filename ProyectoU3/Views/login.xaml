<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoU3.login"
             Title="login">
    <FlexLayout Direction="Column">
        
        <Label Text="Bienvenido" FontSize="60" HorizontalOptions="Center" />

        <Label Text="Inicar sesión" FontSize="30" HorizontalOptions="Center"/>

        <Entry Placeholder="correro" HorizontalTextAlignment="Center"/>

        <Entry Placeholder="contraseña" IsPassword="True"  HorizontalTextAlignment="Center" />

        <Button Text="Iniciar" 
                HeightRequest="50"
                WidthRequest="200" HorizontalOptions="Center" VerticalOptions="Center" />

    </FlexLayout>
</ContentPage>